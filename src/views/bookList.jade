    .container
      .row
        .col-md-12
          .panel
            .panel-body
              // /stories
              each val, index in books
                .row
                  br
                  .col-md-2.col-sm-3.text-center
                    a.story-title(href='#')
                      img.img-circle(alt='', src='http://api.randomuser.me/portraits/thumb/men/58.jpg', style='width:100px;height:100px')
                  .col-md-10.col-sm-9
                    h3= val.title
                    .row
                      .col-xs-9
                        h4
                          span.label.label-default= val.author
                        h4
                          small.text-muted(style="font-family:courier,'new courier';")
                            a.text-muted(href='/books/' + index) Read More
                      .col-xs-3
                    br
                    br
              hr
              // /stories
              a.btn.btn-primary.pull-right.btnNext(href='/')
